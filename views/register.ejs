    <script>
        function checksPassword(password)
        {
            var pattern = /^(?=.[a-zA-Z])(?=.\d)(?=.[!@#$%^&()+])[A-Za-z\d][A-Za-z\d!@#$%^&*()+]{7,32}$$/;
            if (!pattern.test(password)) {
                $(".spassword_error").show();
            } else {
                $(".spassword_error").hide();
            }
        }
    </script>

